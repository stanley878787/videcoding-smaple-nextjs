{
  "name": "videcoding-smaple-nextjs",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "eslint",
    "postinstall": "prisma generate",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "prisma:push": "prisma db push",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:format": "prisma format",
    "db:start": "docker-compose up -d",
    "db:stop": "docker-compose down",
    "db:restart": "docker-compose restart",
    "db:logs": "docker-compose logs -f",
    "db:logs:postgres": "docker-compose logs -f postgres",
    "db:logs:sqlserver": "docker-compose logs -f sqlserver",
    "db:clean": "docker-compose down -v",
    "db:ps": "docker-compose ps",
    "db:test": "tsx scripts/db/test-connection.ts",
    "db:test:postgres": "tsx scripts/db/test-connection.ts postgres",
    "db:test:sqlserver": "tsx scripts/db/test-connection.ts sqlserver",
    "db:test:all": "tsx scripts/db/test-connection.ts all",
    "db:switch": "tsx scripts/db/switch-database.ts",
    "db:switch:postgres": "tsx scripts/db/switch-database.ts postgres",
    "db:switch:sqlserver": "tsx scripts/db/switch-database.ts sqlserver",
    "db:seed": "tsx prisma/seed.ts",
    "db:setup": "npm run db:test && npm run prisma:generate && npm run prisma:push && npm run db:seed",
    "db:setup:local": "npm run db:start && npm run db:test && npm run prisma:generate && npm run prisma:push && npm run db:seed"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0",
